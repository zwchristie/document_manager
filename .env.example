# Application Configuration
APP_NAME=Document Manager
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# API Endpoints
LLM_API_URL=http://localhost:8001
LLM_API_KEY=your-llm-api-key-here
LLM_TIMEOUT=120000
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1000

QA_API_URL=http://localhost:8002
QA_API_KEY=your-qa-api-key-here
QA_TIMEOUT=30000
QA_RETRY_ATTEMPTS=3
QA_RETRY_DELAY=1000

DOC_API_URL=http://localhost:8003
DOC_API_KEY=your-doc-api-key-here
DOC_TIMEOUT=30000
DOC_RETRY_ATTEMPTS=3
DOC_RETRY_DELAY=1000

# Feature Flags
ENABLE_DRIFT_DETECTION=true
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CACHING=true
MAX_CACHE_SIZE=100
CACHE_TTL=300000

# Security Settings
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_INPUT_SANITIZATION=true
ALLOWED_ORIGINS=*

# Observability Settings
ENABLE_HEALTH_CHECKS=true
ENABLE_OBSERVABILITY_METRICS=true
ENABLE_OBSERVABILITY_TRACING=false
ENABLE_STRUCTURED_LOGGING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000